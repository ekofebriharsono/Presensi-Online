<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".TentangActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Damartana"
        android:textColor="#000"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/versi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi 1.0.1-Dev"
        android:textColor="#555252"
        android:textSize="16sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:src="@drawable/damartana" />

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019 RnD Damartana"
        android:textColor="#555252"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_copyright"/>

</LinearLayout>